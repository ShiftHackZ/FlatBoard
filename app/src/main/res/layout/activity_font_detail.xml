<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.detail.FontDetailActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFontDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llFontDetail"
        android:layout_alignParentTop="true"
        />

    <LinearLayout
        android:id="@+id/llFontDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <include layout="@layout/divider"/>

        <Button
            android:id="@+id/btnApplyFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button_selector"
            android:text="apply font" />

        <Button
            android:id="@+id/btnCancelFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button_selector"
            android:text="Cancel" />
    </LinearLayout>

</RelativeLayout>